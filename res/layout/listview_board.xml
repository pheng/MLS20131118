<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:background="@drawable/selector"
    android:padding="5dp" >

    <TextView
        android:id="@+id/t_board_no"
        android:layout_width="@dimen/listview_item_width_s"
        android:layout_height="wrap_content"
        android:text="公告编号"
        style="@style/ListTextStyle" 
        android:visibility="gone"/>
<!-- 
    <TextView
        android:id="@+id/t_board_name"
        android:layout_width="@dimen/listview_item_width"
        android:layout_height="wrap_content"
        android:text="公告名称"
        style="@style/ListTextStyle" />
 -->
    <TextView
        android:id="@+id/t_board_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="公告标题"
        android:layout_weight="2"
        style="@style/ListTextStyle" />

    <TextView
        android:id="@+id/t_board_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="发布时间"
        style="@style/ListTextStyle" />

</LinearLayout>
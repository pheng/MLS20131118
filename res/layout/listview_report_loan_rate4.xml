<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/t_industryname"
        style="@style/ListTextStyle"
        android:layout_width="@dimen/listview_item_width"
        android:layout_height="wrap_content"
        android:text="行业分类" />

    <net.chinawuyue.mls.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/t_industryname"
        android:focusable="false" >

        <net.chinawuyue.mls.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/t_ratio4"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width"
                    android:layout_height="wrap_content"
                    android:text="到期贷款回收率" />

                <TextView
                    android:id="@+id/t_count1"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width_xl"
                    android:layout_height="wrap_content"
                    android:text="年初至本期末到期贷款总额(笔数)" />

                <TextView
                    android:id="@+id/t_balance1"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width_xl"
                    android:layout_height="wrap_content"
                    android:text="年初至本期末到期贷款总额(金额)" />

                <TextView
                    android:id="@+id/t_count2"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width_l"
                    android:layout_height="wrap_content"
                    android:text="到期贷款收回额(笔数)" />

                <TextView
                    android:id="@+id/t_balance2"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width_l"
                    android:layout_height="wrap_content"
                    android:text="到期贷款收回额(金额)" />

                <TextView
                    android:id="@+id/t_count3"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width"
                    android:layout_height="wrap_content"
                    android:text="到期未收回额(笔数)" />

                <TextView
                    android:id="@+id/t_balance3"
                    style="@style/ListTextStyle"
                    android:layout_width="@dimen/listview_item_width"
                    android:layout_height="wrap_content"
                    android:text="到期未收回额(金额)" />
            </LinearLayout>
        </net.chinawuyue.mls.MyHScrollView>
    </net.chinawuyue.mls.InterceptScrollContainer>

</RelativeLayout>